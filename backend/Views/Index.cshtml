@model IEnumerable<ExpenseTracker.Models.Expense>

    <h1>Expenses</h1>
    <a href="@Url.Action("Create", "Expenses")">Add New Expense</a>
    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
        {
            <tr>
                <td>@expense.Category</td>
                <td>@expense.Amount</td>
                <td>@expense.Date.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Edit", "Expenses", new { id = expense.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Expenses", new { id = expense.Id })">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
